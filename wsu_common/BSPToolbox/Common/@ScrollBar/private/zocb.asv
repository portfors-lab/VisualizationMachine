function zocb(sb,ah)
%zoom out callback
%sb     scrollbar object
%ah     axis handle object containing updated sb

a = get(ah, 'userdata');
          'ra = scrollbar(a, ''getrange'');' ...
            'rng = (ra(1,2)-ra(1,1));' ...
            'ctr = (ra(2,2)-ra(2,1))/2+ra(2,1);' ...
            'ra(1,1) = ctr-rng;' ...
            'ra(1,2) = ctr+rng;' ...
            'axes(a);' ...
            'scrollbar(a, ''setrange'', ra(1,:));'];